<!-- Iteracion de elementos -->
<% posts.forEach(({title, img, description, comments }) => { %>
<article class="card my-3">
    <header class=" card-header d-flex justify-content-center align-items-center bg-dark text-light">
        <img class="p-4 border border-5 border-dark rounded-circle" src="<%= img %>">
        <h2 class="col p-2"><%= title%></h2>
    </header>
    <ul class="list-group list-group-flush">
        <% description.forEach( d => { %>
            <li class="list-group-item"><%= d %></li>
        <% }) %>
    </ul>
    <footer class="card-footer">
        <h3>Comentarios</h3>
        <ul class="list-unstyled row flex-column gap-3">
            <% comments.forEach( ({author, body}) => { %>
                <li class="card col col-md-8 col-lg-6 mx-auto">
                    <strong class="card-header"> <%= author %> </strong>
                    <span class="card-body"> <%= body %> </span>
                </li>
            <% }) %>
        </ul>
    </footer>
</article>

<% }) %>