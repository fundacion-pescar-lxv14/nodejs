<section class="list-group col-md-8 col-xl-9">
{{#each posts}}
    <article class="list-group-item d-flex align-items-center gap-2">
        <img class="img-thumbnail" src="{{this.postImg}}" alt="{{this.product}}">
        <div class="col">
            <h3 class="h5">{{this.postTitle}}</h3>
            <p class="h5">$ {{this.price}}</p>
            <address class="d-flex justify-content-between align-items-center mb-0"> 
                <p>
                    Publicado por <a href="/users/{{this.user}}" class="btn btn-link px-1">{{this.user}}</a>
                </p>
                <a class="btn btn-primary" href="/posts/{{this.postId}}">Ver Publicacion</a>
            </address>
        </div>
    </article>
{{/each}}
</section>