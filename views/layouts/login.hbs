<form action="/login" method="post" class="col-md-8 col-lg-6 col-xxl-4 d-grid mx-auto p-4 gap-2 rounded shadow">
    <h2 class="h4">Iniciar Sesion</h2>
    <fieldset class="form-floating">
        <input class="form-control" 
            id="username" 
            name="username" 
            type="text" 
            placeholder="usuario"
            required>
        <label for="username">Ingrese su nombre de usuario</label>
    </fieldset>
    <fieldset class="form-floating">
        <input class="form-control" 
            id="password" 
            name="password" 
            type="password" 
            placeholder="usuario" 
            required>
        <label for="password">Ingrese su Contraseña</label>
    </fieldset>
    <div class="d-flex flex-wrap justify-content-between">
        <p>¿aun no tenes cuenta? <a href="/signin">Registrate</a></p>
        <button class="btn btn-success p-2" type="submit">Aceptar</button>
    </div>
</form>